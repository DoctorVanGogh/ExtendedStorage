<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--============================== Storage ===========================-->

  <ThingDef ParentName="ESFurnitureBase">
    <defName>Storage_WoodenPallet</defName>
    <label>Pallet</label>
    <thingClass>ExtendedStorage.Building_ExtendedStorage</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/Pallet/Pallet</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,3)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>    
      <WorkToBuild>780</WorkToBuild>
      <Beauty>-2</Beauty>
      <ES_StorageFactor>8</ES_StorageFactor>        
    </statBases>
    <description>Haulers carry materials here for storage.</description>
    <size>(2,1)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>75</costStuffCount>
    <killedLeavings>
      <ChunkSlagSteel>1</ChunkSlagSteel>
    </killedLeavings>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>ResourcesRaw</li>
            <li>Manufactured</li>
            <li>PlantMatter</li>
            <li>Drugs</li>
            <li>MortarShells</li>
          </categories>
          <thingDefs>
            <li>Hay</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
    </building>
    <inspectorTabs>
      <li>ExtendedStorage.ITab_Storage</li>
    </inspectorTabs>
    <tickerType>Normal</tickerType>
    <designationCategory>Furniture</designationCategory>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
  </ThingDef>

</Defs>