<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--============================== Storage ===========================-->

  <ThingDef ParentName="FurnitureBase">
    <defName>Storage_TrayRack</defName>
    <label>Tray rack</label>
    <thingClass>ExtendedStorage.Building_ExtendedStorage</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/TrayRack/TrayRack</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,3)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <Beauty>7</Beauty>
      <ES_StorageFactor>10</ES_StorageFactor>        
    </statBases>
    <description>Haulers carry meals and treats here for storage.</description>
    <size>(2,1)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>45</costStuffCount>
    <killedLeavings>
      <ChunkSlagSteel>1</ChunkSlagSteel>
    </killedLeavings>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>FoodMeals</li>
          </categories>
          <thingDefs>
            <li>Chocolate</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
    </building>
    <inspectorTabs>
      <li>ExtendedStorage.ITab_Storage</li>
    </inspectorTabs>
    <tickerType>Normal</tickerType>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <tradeTags>
      <li>Furniture</li>
    </tradeTags>
  </ThingDef>

</Defs>