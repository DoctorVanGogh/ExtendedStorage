<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--============================== Storage ===========================-->

  <ThingDef ParentName="ESFurnitureBase">
    <defName>Storage_Locker</defName>
    <label>Clothing Rack</label>
    <thingClass>ExtendedStorage.Building_ExtendedStorage</thingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/ClothingRack/ClothingRack</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3,2)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>    
      <Beauty>1</Beauty>
      <ES_StorageFactor>10</ES_StorageFactor>
    </statBases>
    <description>Haulers carry apparel here for storage.</description>
    <size>(2,1)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>45</costStuffCount>
    <killedLeavings>
      <ChunkSlagSteel>1</ChunkSlagSteel>
    </killedLeavings>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
        </filter>
      </fixedStorageSettings>
    </building>
    <inspectorTabs>
      <li>ExtendedStorage.ITab_Storage</li>
    </inspectorTabs>
    <tickerType>Normal</tickerType>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
  </ThingDef>

</Defs>